<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget_Buddies.Pages.MenuPage"
             Title="Menu">

    <VerticalStackLayout Spacing="15" Padding="30" VerticalOptions="Center">
        <Label Text="Simple Saver" FontAttributes="Italic" FontSize="30" HorizontalOptions="Center"/>
        <Label Text="Menu" FontSize="24" HorizontalOptions="Center"/>
        
        <Button x:Name="HomePageButton" Text="Home Page" 
                Clicked="OnHomePageClicked" BackgroundColor="#214994"/>
        <Button x:Name="ExpenseLogButton" Text="Expense Log" 
                Clicked="OnExpenseLogClicked" BackgroundColor="#214994"/>
        <Button x:Name="MonthlySummaryButton" Text="Monthly Summary" 
                Clicked="OnMonthlySummaryClicked" BackgroundColor="#214994"/>
        <Button x:Name="SettingsButton" Text="⚙️" 
                Clicked="OnSettingsClicked" BackgroundColor="#214994" HorizontalOptions="Start" VerticalOptions="End"/>
    </VerticalStackLayout>
</ContentPage>